# =======================================
# Development Stage
# =======================================
FROM node:22 AS development

# Set environment variables
ENV NODE_ENV=development
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
ENV NODE_OPTIONS=--max_old_space_size=4096
ENV npm_config_target_platform=linux
ENV npm_config_target_arch=x64
ENV npm_config_target_libc=gnu

# Install system dependencies including OpenSSL for Prisma and build tools for native modules
RUN apt-get update -y && apt-get install -y openssl wget curl python3 make g++ --no-install-recommends && rm -rf /var/lib/apt/lists/*

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Set working directory
WORKDIR /app

# Copy only package files for better layer caching
COPY app/package.json app/pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy the rest of the application
COPY app/ .

# Expose ports
EXPOSE 3000 24678

# Default command (can be overridden in docker-compose)
CMD ["pnpm", "run", "dev"]

# =======================================
# Builder Stage (for production)
# =======================================
FROM development AS builder

# Generate Prisma client
RUN pnpm prisma generate

# Build the application
RUN pnpm run build

# =======================================
# Production Stage
# =======================================
FROM node:22 AS production

# Set environment variables
ENV NODE_ENV=production
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
ENV NODE_OPTIONS=--max_old_space_size=2048

# Install system dependencies including OpenSSL for Prisma and build tools for native modules
RUN apt-get update -y && apt-get install -y openssl wget curl python3 make g++ --no-install-recommends && rm -rf /var/lib/apt/lists/*
RUN apt-get install build-essential libcairo2-dev libpango1.0-dev libjpeg-dev libgif-dev librsvg2-dev
# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Set working directory
WORKDIR /app

# Copy package files
COPY --from=builder /app/package.json /app/pnpm-lock.yaml ./

# Install production dependencies only
RUN pnpm install --frozen-lockfile --prod --prefer-offline

# Copy built application
COPY --from=builder /app/.output ./.output

# Copy Prisma schema and generate client
COPY --from=builder /app/prisma ./prisma
RUN pnpm prisma generate

# Clean up
RUN pnpm store prune
RUN pnpm rebuild better-sqlite3

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3000/api/health || exit 1

# Start command
CMD ["node", ".output/server/index.mjs"]
