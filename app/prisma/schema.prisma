// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// --- Domain models migrated ---

enum AccountStatus {
  ACTIVE
  MIGRATED
  GUEST
}

model User {
  id                   String           @id @default(uuid())
  email                String?       @unique
  username             String        @unique
  firstName            String?
  lastName             String?
  password             String?
  accountStatus        AccountStatus @default(ACTIVE)
  loggedInAt           DateTime  @default(now())
  active               Boolean   @default(true)
  balance              Int       @default(0)
  resetPasswordToken   String?
  resetPasswordExpires DateTime?
  
  totalOrders       Int      @default(0)
  popularityScore   Float    @default(0)

  isGuest Boolean @default(false)
  hostId  String?
  host    User?   @relation("HostGuests", fields: [hostId], references: [id], onDelete: Cascade)
  guests  User[]  @relation("HostGuests")

  roleId String?
  role   CustomRole? @relation(fields: [roleId], references: [id])

  settingsId String?
  settings   Settings? @relation(fields: [settingsId], references: [id])

  orders          Order[] @relation("UserOrders")
  bartendedOrders Order[] @relation("BartenderOrders")
  guestOrders     Order[] @relation("GuestOrders")
  raises          Raise[] @relation("UserRaises")
  raisedBy        Raise[] @relation("RaiserRaises")
  logs            Log[]
  purchases       Purchase[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CustomRole {
  id              String    @id @default(uuid())
  roleName        String @unique
  roleDescription String
  rolePermissions String?
  users           User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Settings {
  id        String     @id @default(uuid())
  language  String  @default("nl")
  darkMode  Boolean @default(true)
  speedMode Boolean @default(false)

  users User[]
}

model Category {
  id             String      @id @default(uuid())
  name           String   @unique
  ageRestriction Boolean
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  products ProductOnCategory[]
}

model Product {
  id                String      @id @default(uuid())
  name              String   @unique
  description       String
  price             Int
  ageRestriction    Boolean  @default(false)
  stock             Int      @default(0)
  packSize          Int?
  imageUrl          String   @default("/images/placeholder.jpg")
  totalOrders       Int      @default(0)
  totalQuantitySold Int      @default(0)
  recentOrders      String?
  popularityScore   Float    @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  archived          Boolean  @default(false)


  categories ProductOnCategory[]
  orderItems OrderItem[]
  purchases Purchase[]
}

model ProductOnCategory {
  productId  String
  categoryId String

  product  Product  @relation(fields: [productId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@id([productId, categoryId])
}

model Order {
  id          String      @id @default(uuid())
  userId      String
  bartenderId String?
  total       Int
  dayOfOrder  DateTime

  user      User        @relation("UserOrders", fields: [userId], references: [id])
  bartender User?       @relation("BartenderOrders", fields: [bartenderId], references: [id])
  guestId   String?
  guest     User?       @relation("GuestOrders", fields: [guestId], references: [id])
  items     OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  orderId   String
  productId String
  count     Int

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@id([orderId, productId])
}

model Purchase {
  id           String      @id @default(uuid())
  productId    String
  product      Product  @relation(fields: [productId], references: [id])
  userId       String?
  user         User?    @relation(fields: [userId], references: [id])
  quantity     Int
  price        Int
  packSize     Int?
  packQuantity Int?
  notes        String?
  dayOfOrder   DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum PaymentMethod {
  cash
  pin
}

model Raise {
  id            String           @id @default(uuid())
  userId        String
  raiserId      String?
  amount        Int
  paymentMethod PaymentMethod @default(cash)
  dayOfOrder    DateTime

  user   User  @relation("UserRaises", fields: [userId], references: [id])
  raiser User? @relation("RaiserRaises", fields: [raiserId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Log {
  id                    String       @id @default(uuid())
  executorId            String?
  executor              User?     @relation(fields: [executorId], references: [id])
  action                String
  level                 String
  category              String
  targetType            String
  targetId              String?
  snapshot              String?
  changes               String?
  description           String
  metadata              String?
  retentionUntil        DateTime?
  tags                  String?
  severity              String?
  containsSensitiveData Boolean   @default(false)
  archived              Boolean   @default(false)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}
